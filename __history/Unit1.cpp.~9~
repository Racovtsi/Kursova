//----------------------------------------------------------------------------
#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"

TForm1 *Form1;
int imgUp,imgDown;


void __fastcall TForm1::Forma2(wchar_t efa[255])
{
 Form1->Visible = false;
 Form2->Show();
 Form2->Label1->Caption = "";
 Form2->Label1->Caption = Form2->Label1->Caption+efa;
}
 //Функція вивода електронної формули атомів

void __fastcall TForm1::AnimationUp(int i)
{
TImage *Image[5];
Image[0] = Image1;
Image[1] = Image2;
Image[2] = Image3;
Image[3] = Image4;
Image[4] = Image5;

 if(Image[i-1]->Height > 120)
   Timer1->Enabled = false;
 else{
  Image[i-1]->Width = Image[i-1]->Width+2;
  Image[i-1]->Height = Image[i-1]->Height+2;
	 }
}
 //Функція анімації збільшення

void __fastcall TForm1::AnimationDown(int i)
{
TImage *Image[5];
Image[0] = Image1;
Image[1] = Image2;
Image[2] = Image3;
Image[3] = Image4;
Image[4] = Image5;

 if(Image[i-1]->Height < 105)
   Timer1->Enabled = false;
 else{
  Image[i-1]->Width = Image[i-1]->Width-10;
  Image[i-1]->Height = Image[i-1]->Height-10;
	 }
}
 //Функція анімації зменшення

__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Image1MouseDown(TObject *Sender, TMouseButton Button, TShiftState Shift,
		  int X, int Y)
{
Forma2(L"1s\u00b9");
}
